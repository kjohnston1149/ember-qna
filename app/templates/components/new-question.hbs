{{#if addNewQuestion}}
  <h2>Ask a new Question</h2>
  <div>
    <form class="ui form">
      <div class="field">
        <label for="title">What's your Question?</label>
        {{input value=title id="title"}}
      </div>
      <div class="field">
        <label for="author">Who's asking?</label>
        {{input value=author id="author"}}
      </div>
      <!-- <div class="field">
        <label for="type">Who's asking?</label>
        {{input value=type id="type"}}
      </div> -->
      {{#ui-dropdown class="selection" selected="type" onChange=(action (mut type))}}
        <div class="default text">Question Type</div>
        <i class="dropdown icon"></i>
        <div class="menu">

            <div class="item" value="general">
              General Question
            </div>
            <div class="item" value="vertabrate">
              Marine Vertabrates
            </div>
            <div class="item" value="invertabrate">
              Marine Invertabrates
            </div>

        </div>
      {{/ui-dropdown}}
      <div class="field">
        <label for="content">Explain your question:</label>
        {{input value=content id="content"}}
      </div>
      <button class="ui button" {{action 'saveQuestion'}}>Ask!</button>
    </form>
  </div>
{{else}}
<button id="newQuestion" class="ui icon right floated button" data-content="Ask a new question" {{action 'questionFormShow'}}><i class="add icon"></i></button>
{{/if}}
